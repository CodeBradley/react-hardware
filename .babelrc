{
  "presets": [
    [
      "@babel/preset-env", {
        targets: {node: 'current'},
      },
    ],
    "@babel/preset-react",
    "@babel/preset-flow",
  ],
  "plugins": [
    "@babel/plugin-proposal-class-properties"
  ],
  "env": {
    "test": {
      "plugins": [
        "./scripts/babel/test-deps",
        "transform-react-jsx-source"
      ]
    }
  }
}

